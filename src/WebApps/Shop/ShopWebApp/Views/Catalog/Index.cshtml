@model IEnumerable<ShopWebApp.Models.CategoryAssortment>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            if (item.Id != 0)
            {
            <tr>
                <td>
                     @Html.ActionLink(item.Name, "CategoryAssortment", new { id=item.Id })
                </td>
            </tr>
            }
}
    </tbody>
</table>
