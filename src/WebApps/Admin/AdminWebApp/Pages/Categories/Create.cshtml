@page
@model AdminWebApp.Pages.Categories.CreateModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<p>Enter a category info:</p>

<form method="post">
    Name:
    <input asp-for="CategoryMod.Name" />
    Parent:
    <select asp-for="CategoryMod.ParentId" class="form-control"
            asp-items="@Model.Categories">
        <option value="">@Model.Categories.FirstOrDefault()</option>
    </select>
    <input type="submit" />
</form>